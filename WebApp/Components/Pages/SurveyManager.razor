@code {
    SurveyResponse newSurvey = new SurveyResponse();
    List<SurveyResponse> pendingSurveys = new List<SurveyResponse>();
    List<SurveyResponse> completedSurveys = new List<SurveyResponse>();
    
    bool showLinkModal = false;
    string currentSurveyLink = "";
    string createdSurveyId = "";

    bool showDeleteModal = false;
    SurveyResponse? surveyToDelete = null;
    
    // Editing state
    int editingId = 0;
    string editingField = "";
    string editValue = "";
    
    // Pagination
    int currentPagePending = 1;
    int currentPageCompleted = 1;
    int pageSize = 10;
    
    int TotalPagesPending => (int)Math.Ceiling((double)pendingSurveys.Count / pageSize);
    int TotalPagesCompleted => (int)Math.Ceiling((double)completedSurveys.Count / pageSize);
    
    List<SurveyResponse> GetPagedPendingSurveys()
    {
        return pendingSurveys
            .OrderByDescending(s => s.DateSent)
            .Skip((currentPagePending - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }
    
    List<SurveyResponse> GetPagedCompletedSurveys()
    {
        return completedSurveys
            .OrderByDescending(s => s.DateCompleted)
            .Skip((currentPageCompleted - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }
    
    void GoToPagePending(int page)
    {
        if (page >= 1 && page <= TotalPagesPending)
        {
            currentPagePending = page;
            StateHasChanged();
        }
    }
    
    void GoToPageCompleted(int page)
    {
        if (page >= 1 && page <= TotalPagesCompleted)
        {
            currentPageCompleted = page;
            StateHasChanged();
        }
    }

    void ShowDeleteModal(SurveyResponse survey)
    {
        surveyToDelete = survey;
        showDeleteModal = true;
        StateHasChanged();
    }

    void CancelDelete()
    {
        showDeleteModal = false;
        surveyToDelete = null;
        StateHasChanged();
    }

    async Task DeleteSurveyConfirmed()
    {
        if (surveyToDelete != null)
        {
            await DeleteSurvey(surveyToDelete.SurveyResponseId);
            showDeleteModal = false;
            surveyToDelete = null;
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadSurveys();
    }

    async Task LoadSurveys()
    {
        try
        {
            var response = await httpClient.GetAsync("http://localhost:5123/api/survey");
            if (response.IsSuccessStatusCode)
            {
                var allSurveys = await response.Content.ReadFromJsonAsync<List<SurveyResponse>>();
                
                pendingSurveys = allSurveys.Where(s => !s.DateCompleted.HasValue).ToList();
                completedSurveys = allSurveys.Where(s => s.DateCompleted.HasValue).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading surveys: {ex.Message}");
        }
    }

    bool IsNewSurveyValid()
    {
        return !string.IsNullOrWhiteSpace(newSurvey.CustomerName) &&
               !string.IsNullOrWhiteSpace(newSurvey.Sector) &&
               !string.IsNullOrWhiteSpace(newSurvey.CompanySize) &&
               !string.IsNullOrWhiteSpace(newSurvey.ProjectName) &&
               !string.IsNullOrWhiteSpace(newSurvey.ProjectDuration);
    }

    async Task CreateSurvey()
    {
        if (!IsNewSurveyValid()) return;

        newSurvey.DateSent = DateTime.Now;
        newSurvey.DateCompleted = null;
        
        newSurvey.Question1 = 0;
        newSurvey.Question2 = 0;
        newSurvey.Question3 = 0;
        newSurvey.Question4 = 0;
        newSurvey.Question5 = 0;
        newSurvey.Question6 = 0;
        newSurvey.Question7 = 0;
        newSurvey.Question8 = 0;
        newSurvey.Question9 = 0;

        try
        {
            var response = await httpClient.PostAsJsonAsync("http://localhost:5123/api/survey", newSurvey);
            
            if (response.IsSuccessStatusCode)
            {
                // Generate the survey link
                createdSurveyId = newSurvey.SurveyId;
                currentSurveyLink = $"{Navigation.BaseUri}survey/{createdSurveyId}";
                
                showLinkModal = true;
                
                newSurvey = new SurveyResponse();
                
                await LoadSurveys();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating survey: {ex.Message}");
        }
    }

    async Task CopyLink(string surveyId)
    {
        var link = $"{Navigation.BaseUri}survey/{surveyId}";
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", link);
    }

    async Task DeleteSurvey(int surveyResponseId)
    {
        try
        {
            var response = await httpClient.DeleteAsync($"http://localhost:5123/api/survey/{surveyResponseId}");
            if (response.IsSuccessStatusCode)
            {
                await LoadSurveys();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting survey: {ex.Message}");
        }
    }

    async Task ConfirmDeleteSurvey(int surveyResponseId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete?");
        if (confirmed)
        {
            await DeleteSurvey(surveyResponseId);
        }
    }

    string GetShortSurveyId(string surveyId)
    {
        if (string.IsNullOrEmpty(surveyId))
            return "N/A";
            
        if (surveyId.Length <= 8)
            return surveyId;
            
        return surveyId.Substring(0, 8) + "...";
    }
    
    void StartEditDate(int id, DateTime? currentValue)
    {
        editingId = id;
        editingField = "datesent";
        editValue = currentValue?.ToString("yyyy-MM-ddTHH:mm", System.Globalization.CultureInfo.InvariantCulture) ?? "";
        StateHasChanged();
    }

    void CancelEdit()
    {
        editingId = 0;
        editingField = "";
        editValue = "";
        StateHasChanged();
    }

    void ClearDate()
    {
        editValue = "";
        StateHasChanged();
    }

    async Task SaveEdit(SurveyResponse survey)
    {
        try
        {
            if (editingField == "datesent")
            {
                if (DateTime.TryParse(editValue, out DateTime dateSent))
                {
                    survey.DateSent = dateSent;
                }
                else
                {
                    survey.DateSent = null;
                }
            }

            // Save to API
            var apiResponse = await httpClient.PutAsJsonAsync($"http://localhost:5123/api/survey/{survey.SurveyResponseId}", survey);
            
            if (apiResponse.IsSuccessStatusCode)
            {
                CancelEdit();
                await LoadSurveys(); // Refresh data
                StateHasChanged();
            }
            else
            {
                Console.WriteLine($"Error saving changes: {apiResponse.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving changes: {ex.Message}");
        }
    }

    async Task HandleKeyPress(Microsoft.AspNetCore.Components.Web.KeyboardEventArgs e, SurveyResponse survey)
    {
        if (e.Key == "Enter")
        {
            await SaveEdit(survey);
        }
        else if (e.Key == "Escape")
        {
            CancelEdit();
        }
    }
