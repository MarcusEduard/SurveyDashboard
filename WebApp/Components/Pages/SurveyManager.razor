@page "/survey-manager"
@attribute [Authorize(Policy = "MustBeAdmin")]
@using WebAPI.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject HttpClient httpClient
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="survey-manager-container">
    <h2>Survey Management</h2>
    <p>Create and send surveys to customers, and track their responses.</p>

    <!-- Create New Survey -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Create New Survey</h4>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Customer Name *</label>
                    <input type="text" class="form-control" @bind="newSurvey.CustomerName" placeholder="Company Name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Sector *</label>
                    <select class="form-select" @bind="newSurvey.Sector">
                        <option value="">Select Sector</option>
                        <option value="Energy">Energy</option>
                        <option value="Health">Health</option>
                        <option value="Tech">Tech</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Company Size *</label>
                    <select class="form-select" @bind="newSurvey.CompanySize">
                        <option value="">Select Company Size</option>
                        <option value="Micro">Micro (1-9 employees)</option>
                        <option value="SME">SME (10-249 employees)</option>
                        <option value="Large">Large (250+ employees)</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Project Name *</label>
                    <input type="text" class="form-control" @bind="newSurvey.ProjectName" placeholder="e.g. Market Research" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Project Duration *</label>
                    <input type="text" class="form-control" @bind="newSurvey.ProjectDuration" placeholder="Duration in hours: e.g. 50" />
                </div>
            </div>
            
            <div class="mt-3">
                <button class="btn btn-outline-primary" @onclick="CreateSurvey" disabled="@(!IsNewSurveyValid())">
                    <img class="icon" src="/images/add.png" alt="Create" />
                    <span>Create Survey & Generate Link</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Pending Surveys -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Pending Surveys</h4>
        </div>
        <div class="card-body">
            @if (pendingSurveys.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Survey ID</th>
                                <th>Customer</th>
                                <th>Project</th>
                                <th>Sector</th>
                                <th>Company Size</th>
                                <th>Date Sent</th>
                                <th>Survey Link</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var survey in GetPagedPendingSurveys())
                            {
                                <tr>
                                    <td><code>@GetShortSurveyId(survey.SurveyId)</code></td>
                                    <td>@survey.CustomerName</td>
                                    <td>@survey.ProjectName</td>
                                    <td><span class="badge bg-info">@survey.Sector</span></td>
                                    <td><span class="badge bg-secondary">@(survey.CompanySize ?? "N/A")</span></td>
                                    <td>
                                        @if (editingId == survey.SurveyResponseId && editingField == "datesent")
                                        {
                                            <div class="date-edit-container">
                                                <input type="datetime-local" value="@editValue" @onchange="@((e) => editValue = e.Value?.ToString() ?? "")" 
                                                       @onkeypress="@(async (e) => await HandleKeyPress(e, survey))" 
                                                       class="edit-input date-input" />
                                                <button type="button" @onclick="() => ClearDate()" class="btn-clear-date" title="Clear date">✕</button>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="editable date-text" @onclick="() => StartEditDate(survey.SurveyResponseId, survey.DateSent)">
                                                @(survey.DateSent?.ToString("MM/dd/yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture) ?? "Click to set date")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => CopyLink(survey.SurveyId)">
                                            <img class="icon" src="/images/send.png" alt="Copy" />
                                            <span>Copy Link</span>
                                        </button>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (editingId == survey.SurveyResponseId)
                                            {
                                                <button class="btn-save" @onclick="() => SaveEdit(survey)" title="Save changes">
                                                    <img class="icon" src="/images/checklist.png" alt="Save" />
                                                </button>
                                                <button class="btn-cancel" @onclick="CancelEdit" title="Cancel editing">
                                                    <img class="icon" src="/images/trash.png" alt="Cancel" />
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-danger" title="Delete Survey" @onclick="() => ShowDeleteModal(survey)">
                                                    <img class="icon" src="/images/trash.png" alt="Delete" />
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (pendingSurveys.Count > pageSize)
                {
                    <div class="d-flex justify-content-center align-items-center mt-3">
                        <button class="btn btn-outline-secondary btn-sm me-2" 
                                @onclick="() => GoToPagePending(currentPagePending - 1)"
                                disabled="@(currentPagePending == 1)">
                            Previous
                        </button>
                        <span class="mx-3">
                            Page @currentPagePending of @TotalPagesPending (@pendingSurveys.Count total surveys)
                        </span>
                        <button class="btn btn-outline-secondary btn-sm ms-2" 
                                @onclick="() => GoToPagePending(currentPagePending + 1)"
                                disabled="@(currentPagePending == TotalPagesPending)">
                            Next
                        </button>
                    </div>
                }
            }
            else
            {
                <div class="text-muted text-center py-4">
                    <img class="empty-icon" src="/images/graph.png" alt="Empty" />
                    <p>No pending surveys found.</p>
                </div>
            }
        </div>
    </div>

    <!-- Recently Completed Surveys -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Completed Surveys</h4>
            @if (completedSurveys.Any())
            {
                <ExportToolbar Data="@completedSurveys" 
                              FileName="completed-surveys" 
                              Title="Completed Surveys Report" />
            }
        </div>
        <div class="card-body">
            @if (completedSurveys.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Survey ID</th>
                                <th>Customer</th>
                                <th>Project</th>
                                <th>Completed</th>
                                <th>Overall Score</th>
                                <th>Time to Complete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var survey in GetPagedCompletedSurveys())
                            {
                                var timeToComplete = survey.DateCompleted.HasValue && survey.DateSent.HasValue 
                                    ? (survey.DateCompleted.Value - survey.DateSent.Value).TotalDays 
                                    : 0;
                                
                                <tr>
                                    <td><code>@GetShortSurveyId(survey.SurveyId)</code></td>
                                    <td>@survey.CustomerName</td>
                                    <td>@survey.ProjectName</td>
                                    <td>@survey.DateCompleted?.ToString("MM/dd/yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td>
                                        <span class="badge @(survey.Question1 >= 8 ? "bg-success" : survey.Question1 >= 6 ? "bg-info" : survey.Question1 >= 4 ? "bg-warning" : "bg-danger")">
                                            @survey.Question1/10
                                        </span>
                                    </td>
                                    <td>@Math.Round(timeToComplete, 1) days</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    <!-- Pagination Controls -->
                    @if (TotalPagesCompleted > 1)
                    {
                        <div class="d-flex justify-content-center align-items-center mt-3">
                            <button class="btn btn-sm btn-outline-primary me-2" 
                                    @onclick="() => GoToPageCompleted(currentPageCompleted - 1)"
                                    disabled="@(currentPageCompleted == 1)">
                                ← Previous
                            </button>
                            
                            <span class="mx-3">
                                Page @currentPageCompleted of @TotalPagesCompleted (@completedSurveys.Count total responses)
                            </span>
                            
                            <button class="btn btn-sm btn-outline-primary ms-2" 
                                    @onclick="() => GoToPageCompleted(currentPageCompleted + 1)"
                                    disabled="@(currentPageCompleted == TotalPagesCompleted)">
                                Next →
                            </button>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-muted text-center py-4">
                    <img class="empty-icon" src="/images/graph.png" alt="Empty" />
                    <p>No completed surveys found.</p>
                </div>
            }
        </div>
    </div>
</div>

@if (showLinkModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Survey Link Created</h5>
                    <button type="button" class="btn-close" @onclick="() => showLinkModal = false"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Survey created successfully!</strong></p>
                    <p>Customer: <strong>@newSurvey.CustomerName</strong></p>
                    <p>Project: <strong>@newSurvey.ProjectName</strong></p>
                    <p>Sector: <strong>@newSurvey.Sector</strong></p>
                    <p>Company Size: <strong>@newSurvey.CompanySize</strong></p>
                    
                    <div class="alert alert-info">
                        <strong>Survey Link:</strong>
                        <div class="input-group mt-2">
                            <input type="text" class="form-control" value="@currentSurveyLink" readonly />
                            <button class="btn btn-outline-primary" @onclick="() => CopyLink(createdSurveyId)">
                                <i class="fas fa-copy"></i> Copy
                            </button>
                        </div>
                    </div>
                    
                    <p class="text-muted small">Share this link with your customer. They can complete the survey using this link.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showLinkModal = false">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showDeleteModal && surveyToDelete != null)
{
    <div class="modal-overlay" @onclick="CancelDelete">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h3>Confirm Deletion</h3>
            <p>Are you sure you want to delete this survey?</p>
            <div class="modal-details">
                <p><strong>Customer:</strong> @surveyToDelete.CustomerName</p>
                <p><strong>Project:</strong> @surveyToDelete.ProjectName</p>
                <p><strong>Survey ID:</strong> <code>@GetShortSurveyId(surveyToDelete.SurveyId)</code></p>
            </div>
            <div class="modal-actions">
                <button class="btn-confirm-delete" @onclick="DeleteSurveyConfirmed">
                    <img class="icon" src="/images/trash.png" alt="Delete" />
                    <span>Delete Survey</span>
                </button>
                <button class="btn-cancel-modal" @onclick="CancelDelete">
                    Cancel
                </button>
            </div>
        </div>
    </div>
}

