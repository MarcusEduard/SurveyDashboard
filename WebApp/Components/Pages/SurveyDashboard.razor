    IEnumerable<TrendDataPoint> GroupByMonths(List<SurveyResponse> responses)
    {
        return responses
            .GroupBy(r => new { r.DateCompleted!.Value.Year, r.DateCompleted!.Value.Month })
            .Select(g => new TrendDataPoint
