@page "/"

<PageTitle>Home</PageTitle>

@inject IJSRuntime JS
@inject NavigationManager navMgr

@code {
    // Removed background image injection for a cleaner, more professional look
    protected override Task OnAfterRenderAsync(bool firstRender) => Task.CompletedTask;

    void GoToDashboard() => navMgr.NavigateTo("/survey-dashboard");
    void GoToEditor() => navMgr.NavigateTo("/survey-editor");
    void GoToManager() => navMgr.NavigateTo("/survey-manager");
    void GoToLogin() => navMgr.NavigateTo("/login");
    void GoToAbout() => navMgr.NavigateTo("/about");

    string GetFullName(AuthenticationState context)
    {
        var claim = context?.User?.Claims?.FirstOrDefault(c => c.Type == "Fullname");
        return claim?.Value ?? "User";
    }

    string GetRole(AuthenticationState context)
    {
        var claim = context?.User?.Claims?.FirstOrDefault(c => c.Type == "role");
        return claim?.Value ?? "Unknown Role";
    }

    bool IsAdmin(AuthenticationState context)
    {
        return GetRole(context).Equals("Admin", StringComparison.OrdinalIgnoreCase);
    }

    string GetWelcomeText(AuthenticationState context)
    {
        var fullName = GetFullName(context);
        var role = GetRole(context);
        return IsAdmin(context)
            ? $"Welcome {fullName}!"
            : $"Welcome {fullName} from {role}!";
    }
}

<AuthorizeView>
    <Authorized Context="context">
        <div class="home-hero">
            <div class="hero-logo">
                <img src="/images/dk_logo.png" alt="Danish Embassy Logo" />
            </div>
            <h1>@GetWelcomeText(context)</h1>
            <div class="sub-message">
                Get customer insights. See analytics, manage surveys, and track your impact.
            </div>
            <div class="quick-actions">
                <button class="quick-action-btn" @onclick="GoToDashboard">
                    <img class="home-icon" src="/images/dashboard.png" alt="Dashboard" />
                    <span>Dashboard</span>
                </button>
                @if (IsAdmin(context))
                {
                    <button class="quick-action-btn" @onclick="GoToEditor">
                        <img class="home-icon" src="/images/edit.png" alt="Survey Editor" />
                        <span>Survey Editor</span>
                    </button>
                    <button class="quick-action-btn" @onclick="GoToManager">
                        <img class="home-icon" src="/images/add.png" alt="Survey Manager" />
                        <span>Survey Manager</span>
                    </button>
                }
            </div>
            <div class="user-info">
                <span>@context.User.Identity?.Name</span>
                <span class="dot">•</span>
                <span>Role: @GetRole(context)</span>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="home-hero">
            <div class="hero-logo">
                <img src="/images/dk_logo.png" alt="Danish Embassy Logo" />
            </div>
            <h1>Welcome to TC The Hague Dashboard</h1>
            <div class="sub-message">
                Log in to access your personalized dashboard, manage surveys, and view analytics.
            </div>
            <div class="quick-actions">
                <button class="quick-action-btn" @onclick="GoToLogin">
                    <img class="home-icon" src="/images/enter.png" alt="Login" />
                    <span>Login</span>
                </button>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

