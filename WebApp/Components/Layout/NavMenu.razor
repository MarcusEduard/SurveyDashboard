@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@using WebApp.Services.Http
@using Microsoft.AspNetCore.Components

@inject NavigationManager navMgr
@inject IAuthService authService

<nav class="modern-navbar">
    <div class="navbar-container">
        <!-- Logo Section -->
        <div class="navbar-brand">
            <img src="/images/dk_logo.png" alt="Danish Embassy Logo" class="navbar-logo" />
            <div class="brand-text">
                <span class="brand-title">The Danish Embassy in The Hague</span>
                <span class="brand-subtitle">Customer Satisfaction Dashboard</span>
            </div>
        </div>

        <!-- Navigation Menu -->
        <div class="navbar-nav">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <img class="nav-icon-img" src="/images/home.png" alt="Home" />
                <span>Home</span>
            </NavLink>

            <AuthorizeView Policy="NotGuest">
                <Authorized>
                    <NavLink class="nav-link" href="/survey-dashboard" Match="NavLinkMatch.All">
                        <img class="nav-icon-img" src="/images/dashboard.png" alt="Dashboard" />
                        <span>Dashboard</span>
                    </NavLink>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="MustBeAdmin">
                <Authorized>
                    <NavLink class="nav-link" href="survey-manager">
                        <img class="nav-icon-img" src="/images/add.png" alt="Generate Survey" />
                        <span>Generate Survey</span>
                    </NavLink>
                    
                    <NavLink class="nav-link" href="survey-editor">
                        <img class="nav-icon-img" src="/images/edit.png" alt="Manage" />
                        <span>Manage</span>
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </div>

        <!-- User Section -->
        <div class="navbar-actions">
            <AuthorizeView>
                <Authorized>
                    <div class="user-info">
                        <span class="user-greeting">Welcome back!</span>
                        <button class="action-btn logout-btn" @onclick="Logout" title="Logout">
                            <img class="action-icon-img" src="/images/logout.png" alt="Logout" />
                            <span>Logout</span>
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <button class="action-btn login-btn" @onclick="Login" title="Login">
                        <img class="action-icon-img" src="/images/enter.png" alt="Login" />
                        <span>Login</span>
                    </button>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <button class="mobile-toggle" @onclick="ToggleMobileMenu">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>

    <div class="mobile-nav @(mobileMenuOpen ? "open" : "")">
        <div class="mobile-nav-item">
            <NavLink class="mobile-nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                <img class="nav-icon-img" src="/images/home.png" alt="Home" />
                <span>Home</span>
            </NavLink>
        </div>

        <AuthorizeView Policy="NotGuest">
            <Authorized>
                <div class="mobile-nav-item">
                    <NavLink class="mobile-nav-link" href="/survey-dashboard" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                        <img class="nav-icon-img" src="/images/dashboard.png" alt="Dashboard" />
                        <span>Dashboard</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="SectorDataAccess">
            <Authorized>
                <div class="mobile-nav-item">
                    <NavLink class="mobile-nav-link" href="surveyadmin" @onclick="CloseMobileMenu">
                        <img class="nav-icon-img" src="/images/edit.png" alt="Manage Data" />
                        <span>Manage Data</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="MustBeAdmin">
            <Authorized>
                <div class="mobile-nav-item">
                    <NavLink class="mobile-nav-link" href="survey-manager" @onclick="CloseMobileMenu">
                        <img class="nav-icon-img" src="/images/add.png" alt="Survey Manager" />
                        <span>Survey Manager</span>
                    </NavLink>
                </div>
                <div class="mobile-nav-item">
                    <NavLink class="mobile-nav-link" href="survey-editor" @onclick="CloseMobileMenu">
                        <img class="nav-icon-img" src="/images/edit.png" alt="Survey Editor" />
                        <span>Survey Editor</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="mobile-nav-divider"></div>
        
        <AuthorizeView>
            <Authorized>
                <div class="mobile-nav-item">
                    <button class="mobile-action-btn logout-btn" @onclick="Logout">
                        <img class="action-icon-img" src="/images/logout.png" alt="Logout" />
                        <span>Logout</span>
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="mobile-nav-item">
                    <button class="mobile-action-btn login-btn" @onclick="Login">
                        <img class="action-icon-img" src="/images/enter.png" alt="Login" />
                        <span>Login</span>
                    </button>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</nav>

@code {
    private bool mobileMenuOpen = false;

    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        mobileMenuOpen = false;
    }
}

<style>
    .modern-navbar {
        background: #ffffff;
        position: sticky;
        top: 0;
        z-index: 1000;
        border-bottom: 1px solid #e5e7eb; /* subtle divider */
    }

    .navbar-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1.5rem;
        height: 70px;
        position: relative;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: #111827;
        text-decoration: none;
        margin-left: -2rem;
    }

    .navbar-logo {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        object-fit: contain;
        background: transparent;
        padding: 0;
        margin-left: -1.5rem;
    }

    .brand-text {
        display: flex;
        flex-direction: column;
    }

    .brand-title {
        font-size: 1.2rem;
        font-weight: 600;
        line-height: 1;
        margin-bottom: 2px;
        color: #111827;
    }

    .brand-subtitle {
        font-size: 0.8rem;
        opacity: 0.7;
        font-weight: 400;
        letter-spacing: 0.2px;
        color: #6b7280;
    }

    .navbar-nav {
        display: flex;              
        flex-direction: row;        
        align-items: center;        
        justify-content: center;    
        gap: 1.5rem;                
        flex-wrap: nowrap;          
        margin: 0 2rem;
    }

    .navbar-nav > * {
        display: flex;              
        align-items: center;        
        flex-direction: row;        
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        color: #374151 !important;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        border-radius: 8px;
        transition: color 0.2s ease, background-color 0.2s ease;
        position: relative;
        white-space: nowrap;
        flex-shrink: 0;
    }

    /* remove flashy sweep effect */

    .nav-link:hover {
        background: #f3f4f6;
        color: #111827 !important;
    }

    .nav-link.active {
        background: #eef2f7;
        color: #111827 !important;
    }

    .nav-icon-img {
        width: 18px;
        height: 18px;
        object-fit: contain;
        filter: none; /* no heavy shadows */
    }

    .navbar-nav > *,
    .navbar-nav .authorize-view,
    .navbar-nav > div,
    .navbar-nav > [data-blazor-authorize-view] {
        display: flex !important;
        align-items: center !important;
        flex-direction: row !important;
    }

    ::ng-deep .navbar-nav > * {
        display: flex !important;
        align-items: center !important;
    }

    .navbar-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-greeting {
        color: #374151;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .action-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.2s ease, color 0.2s ease;
        background: #ffffff;
        color: #111827;
    }

    .login-btn { }
    .logout-btn { }

    .action-btn:hover {
        background: #f9fafb;
        color: #111827;
    }

    .action-icon-img {
        width: 18px;
        height: 18px;
        object-fit: contain;
        filter: none;
    }

    .mobile-toggle {
        display: none;
        flex-direction: column;
        justify-content: space-around;
        width: 2rem;
        height: 2rem;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        gap: 3px;
    }

    .hamburger-line {
        width: 2rem;
        height: 3px;
        background: white;
        border-radius: 10px;
        transition: all 0.3s linear;
        position: relative;
        transform-origin: 1px;
    }

    .mobile-nav {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #ffffff;
        border-top: 1px solid #e5e7eb;
        box-shadow: none;
    }

    .mobile-nav.open {
        display: block;
        animation: slideDown 0.3s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .mobile-nav-item {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .mobile-nav-item:last-child {
        border-bottom: none;
    }

    .mobile-nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: #374151 !important;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

    .mobile-nav-link:hover,
    .mobile-nav-link.active {
        background: #f3f4f6;
        color: #111827 !important;
    }

    .mobile-nav-divider {
        height: 1px;
        background: #e5e7eb;
        margin: 0.5rem 1rem;
    }

    .mobile-action-btn {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: transparent;
        border: none;
        color: #374151;
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s ease, color 0.2s ease;
        text-align: left;
    }

    .mobile-action-btn:hover {
        background: #f3f4f6;
        color: #111827;
    }

    @@media (max-width: 1200px) {
        .navbar-nav {
            gap: 1rem;
            margin: 0 1rem;
        }
        
        .nav-link {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 992px) {
        .navbar-nav {
            display: none;
        }

        .mobile-toggle {
            display: flex;
        }

        .brand-text {
            display: none;
        }

        .navbar-logo {
            width: 35px;
            height: 35px;
        }

        .user-greeting {
            display: none;
        }
    }

    @@media (max-width: 576px) {
        .navbar-container {
            padding: 0 0.75rem;
        }

        .action-btn span {
            display: none;
        }

        .action-btn {
            padding: 0.75rem;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            justify-content: center;
        }
    }

    .mobile-toggle.open .hamburger-line:first-child {
        transform: rotate(45deg);
    }

    .mobile-toggle.open .hamburger-line:nth-child(2) {
        opacity: 0;
    }

    .mobile-toggle.open .hamburger-line:nth-child(3) {
        transform: rotate(-45deg);
    }

    html {
        scroll-behavior: smooth;
    }

    .nav-link:focus,
    .action-btn:focus,
    .mobile-toggle:focus {
        outline: 2px solid #cbd5e1;
        outline-offset: 2px;
    }

    /* tone normalization cleanup */
</style>
