@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    @if (!IsSurveyPage())
    {
        <NavMenu />
    }

    <main class="main-content @(IsSurveyPage() ? "full-width survey-page" : "")">
        <article class="content @(IsSurveyPage() ? "survey-content" : "page-content")">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsSurveyPage()
    {
        var uri = new Uri(Navigation.Uri);
        var path = uri.LocalPath;
        
        // Only hide navigation for the clients who get the survey
        // Allow navigation on all admin/employee roles
        return path.Equals("/survey", StringComparison.OrdinalIgnoreCase) ||
               path.StartsWith("/survey/", StringComparison.OrdinalIgnoreCase);
    }
}

<style>
    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: var(--main-bg, #f8f9fa);
    }

    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .main-content.full-width {
        margin-left: 0 !important;
    }

    .survey-content {
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .top-row {
        background-color: #dc3545 !important;
        border-bottom: 2px solid #b02a37;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 10;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.3);
        color: white;
    }

    .top-row a {
        color: white !important;
        text-decoration: none;
    }

    .top-row .btn-link {
        color: white !important;
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.2s ease;
    }

    .top-row .btn-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
    }

    .page-content {
        position: relative;
        background: var(--main-bg, #f8f9fa);
        height: 100vh;
        padding: 20px;
        color: #222;
        z-index: 1;
        box-shadow: 0 2px 16px rgba(0,0,0,0.04);
        border-radius: 18px;
        margin: 18px 0;
    }

    @@media (max-width: 640.98px) {
        .top-row {
            justify-content: space-between;
        }

        .top-row a, .top-row .btn-link {
            margin-left: 0;
        }
    }

    @@media (min-width: 641px) {
        .page {
            flex-direction: row;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: sticky;
            top: 0;
        }

        .top-row {
            padding-left: 2rem !important;
            padding-right: 1.5rem !important;
        }
    }

    #blazor-error-ui {
        background: white;
        bottom: 0;
        box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
        display: none;
        left: 0;
        padding: 0.6rem 1.25rem 0.7rem 1.25rem;
        position: fixed;
        width: 100%;
        z-index: 2000;
        border-top: 2px solid #ff9800;
    }

    #blazor-error-ui .dismiss {
        cursor: pointer;
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: #f44336;
        color: white;
        border: none;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    @@media (max-width: 768px) {
        .content {
            padding: 1rem;
        }
    }
</style>
